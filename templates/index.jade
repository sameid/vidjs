doctype html
html(lang="en")
  head
    title Vid.js
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/airplop.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body

    div(class="container")

      div(class="page-header")
        h1 Vid.js
        p #{localURL}
        a(href='http://#{ip}:9091/transmission/web/', target="_blank" class="btn btn-primary") Manage Torrents
        span &nbsp;
        a(href='/refresh', class="btn btn-default") Refresh

      each file, i in files
        div(class="row")
          div(class="col-sm-12 filename")
            a(href='/show/'+i) #{file.name}
          div(class="col-xs-1")
            span #{file.size}
